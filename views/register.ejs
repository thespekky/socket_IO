<%- include('header')%>
<div class="login-form container">
    <h3>Registration</h3>

    <form action="/reg" method="POST">
        <label for="hiba" name="hiba" id="hiba"><%= hiba %></label><br>
        <div class="form-group">
            <input type="text" name="username" placeholder="Username" class="form-control animate__animated animate__backInLeft" required>
        </div>
        <div class="form-group">
            <input type="password" name="passwd1" placeholder="Password" class="form-control animate__animated animate__backInRight">
        </div>
        <div class="form-group">
            <input type="password" name="passwd2" placeholder="Password confirm" class="form-control animate__animated animate__backInUp">
        </div>
        <div class="form-group">
            <input type="submit" value="Registration"  class="btn btn-secondary">
        </div>
        
    </form>
    <a href="./">Back to login...</a>
</div>
<%- include('footer')%>