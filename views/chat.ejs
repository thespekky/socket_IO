<%- include('header')%>
<div class="row">
    <aside class="col-sm-3">
        <h6>Roomname</h6>
        <div id="roomname"></div>
        <h6>Users</h6>
        <ul id="userslist"></ul>
        <a href="/" class="btn btn-secondary">Log out</a>
    </aside>
    <section class="col-sm-9">
        <h6>Chat stream</h6>
        <div class="chat-messages">
            <% for(let i=0;i<results.length;i++){%>
                <div class="message animate__animated animate__slideInLeft animate__faster" >
                    <p class="uname"><%=results[i].username%>  <span><%= results[i].time %></span> </p>
                    <p><%=results[i].message%></p>
                </div>
            <%}%>
        </div>
        <div id="feedback"></div>
        <div class="input-group">
            <input type="text" id="msgTxt" placeholder="Type a text...." class="form-control" id="">
            <button class="btn btn-success" id="sendBtn">Send</button>
        </div>
    </section>
</div>
<script src="/socket.io/socket.io.js"></script>
<script src="../js/app.js"></script>
<%- include('footer')%>